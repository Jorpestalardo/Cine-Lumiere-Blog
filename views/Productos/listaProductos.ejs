<%- include ('../Layouts/Header', {title: "Lista de Productos"}) %> 

<h1>Lista de productos</h1>

<a href="/productos/nuevo">Agregar Producto</a>

<table>
    <thead>

        <tr>

            <th>Nombre</th>
            <th>Precio</th>
            <th>Acciones</th>
            
        </tr>

    </thead>

    <tbody>

        <% for (let i = 0; i < productos.length; i++) {  %> 
            <tr>
                <td><%= productos[i].name %> </td>
                <td>$<%= productos[i].price %> </td>
                <td>
                    <a href="/productos<%= productos[i]._id%>">Ver</a>
                    <a href="/productos<%= productos[i]._id%>/editar">Editar</a>
                    <a href="/productos<%= productos[i]._id%>/eliminar">Eliminar</a>
                </td>
            </tr>
            <% } %>

    </tbody>
</table>

<%- include ('../Layouts/Footer', {title: "Lista de Productos"}) %> 
